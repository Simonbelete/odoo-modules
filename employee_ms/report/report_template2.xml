<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <template id="summary_Detail">
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="o">
                <t t-call="web.internal_layout">
                    <style>
                        .Row {
                        display: table;
                        width: 100%; /*Optional*/
                        table-layout: fixed; /*Optional*/
                        border-spacing: 2px; /*Optional*/
                        }
                        .table {
                        table-condensed: half; /*Optional*/
                        }
                        .Column {
                        display: table-cell;
                        width: 100%;
                        }
                        .inside_div{
                        margin-top: 5px;
                        border-radius: 5px;
                        }
                        th {
                        height: 30px;
                        font-size:20px;
                        }
                        td {
                        height: 20px;
                        font-size:18px;
                        }
                    </style>
                    <div class="oe_structure"/>
                    <link rel="stylesheet" href="/employee_ms/static/src/css/style.css"/>
                    <h4 style=" text-align: center;">
                        <span class="bg bg-danger">EMPLOYEE SUMMARY INFORMATION</span>
                    </h4>
                    <div class="container-fluid mt-4">
                        <div class="row">
                            <div class="col-4 col-sm-3">
                                <table class="table styled-table">
                                    <tr>
                                        <th class="bg bg-danger">
                                            Profile Photo
                                        </th>
                                    </tr>
                                    <tr>
                                        <td width="100%">
                                            <img t-if="not o.image_1920"
                                                 t-att-src="'/static/src/img/report.png'" height="140"
                                                 border="1" width="220"/>
                                            <img t-if="o.image_1920"
                                                 t-att-src="'data:image/png;base64,%s' % to_text(o.image_1920)"
                                            />
                                        </td>
                                    </tr>
                                </table>
                            </div>
                            <div class="container-fluid">
                                <div class="row">
                                    <div class="col-8 col-sm-3">
                                        <table class="styled-table" width="100%">
                                            <tr>
                                                <th class="bg bg-danger" colspan="4">Basic Employee's Detail</th>
                                                <th></th>
                                            </tr>
                                            <tr>
                                                <td>Full Name:
                                                </td>
                                                <td>
                                                    <t t-esc="o.name"/>
                                                </td>
                                            </tr>
                                            <tr>
                                                <td>Gender:
                                                </td>
                                                <td>
                                                    <t t-esc="o.gender"/>
                                                </td>
                                            </tr>
                                            <tr>
                                                <td>Date of Birth:
                                                </td>
                                                <td>
                                                    <t t-esc="o.birthday1"/>
                                                </td>
                                            </tr>
                                            <tr>
                                                <td>Current Educational Level:
                                                </td>
                                                <td>
                                                    <t t-esc="o.education_level"/>
                                                </td>
                                            </tr>
                                            <tr>
                                                <td>Field of Study:
                                                </td>
                                                <td>
                                                    <t t-esc="o.field_of_study"/>
                                                </td>
                                            </tr>

                                            <tr>
                                                <td>
                                                    Pension Number:
                                                </td>
                                                <td>
                                                    <t t-esc="o.pension_number"/>
                                                </td>
                                            </tr>
                                            <tr>
                                                <td>Phone Number:
                                                </td>
                                                <td>
                                                    <t t-esc="o.mobile_phone_two"/>
                                                </td>
                                            </tr>
                                            <tr>
                                                <td>Email Address:
                                                </td>
                                                <td>
                                                    <t t-esc="o.work_email"/>
                                                </td>
                                            </tr>
                                        </table>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>


                    <div class="row mt-3">
                        <div class="col-8 col-sm-3">
                            <table class="styled-table" width="100%">
                                <tr>
                                    <th class="bg bg-danger" width="53%">Employment Details</th>
                                    <th class="bg bg-danger"></th>
                                </tr>
                                <tr>
                                    <td>Hiring Day:
                                    </td>
                                    <td>
                                        <t t-esc="o.Hiring_day"/>
                                    </td>
                                </tr>
                                <tr>
                                    <td>Department:
                                    </td>
                                    <td>
                                        <t t-esc="o.department_id.name"/>
                                    </td>
                                </tr>
                                <tr>
                                    <td>Job Title:
                                    </td>
                                    <td>
                                        <t t-esc="o.job_title"/>
                                    </td>
                                </tr>
                                <tr>
                                    <td>Scale:
                                    </td>
                                    <td>
                                        <t t-foreach="o.contract_employee_id"
                                           t-as="rent">
                                            <t t-esc="rent.salary_scale"/>
                                        </t>
                                    </td>
                                </tr>
                                <tr>
                                    <td width="20%" font-size="18">Salary:
                                    </td>
                                    <td>
                                        <t t-foreach="o.contract_employee_id"
                                           t-as="rent">
                                            <t t-esc="'{0:,.2f}'.format(rent.wage)"/>
                                        </t>
                                    </td>
                                </tr>
                                <tr>
                                    <td>Total Allowance:
                                    </td>
                                    <td>
                                        <t t-foreach="o.contract_employee_id"
                                           t-as="rent">
                                            <t t-esc="'{0:,.2f}'.format(rent.total_allowance)"/>
                                            <br/>
                                        </t>
                                    </td>
                                </tr>
                            </table>
                        </div>
                        <div class="col-4 col-sm-3">
                            <table class=" styled-table" width="100%">
                                <tr>
                                    <th class="bg bg-danger">Current Address</th>
                                    <th class="bg bg-danger" width="50%"></th>
                                </tr>
                                <tr>
                                    <td>
                                        City:
                                    </td>
                                    <td>
                                        <t t-esc="o.city.name"/>
                                    </td>
                                </tr>
                                <tr>
                                    <td>
                                        Sub City:
                                    </td>
                                    <td>
                                        <t t-esc="o.sub_city.name"/>
                                    </td>
                                </tr>
                                <tr>
                                    <td>
                                        Woreda:
                                    </td>
                                    <td>
                                        <t t-esc="o.woreda"/>
                                    </td>
                                </tr>
                                <tr>
                                    <td>
                                        House Number:
                                    </td>
                                    <td>
                                        <t t-esc="o.house_number"/>
                                    </td>
                                </tr>
                                <tr>
                                    <td>
                                        Home Work Distance:
                                    </td>
                                    <td>
                                        <t t-esc="o.km_home_work"/>
                                    </td>
                                </tr>
                            </table>
                        </div>
                    </div>

                    <div class="row mt-3">
                        <t t-foreach="o.training_name_ids.training_name_inverse_id" t-as="line">
                            <table class="table styled-table" border="1">
                                <tr>
                                    <th class="bg bg-danger" colspan="3">
                                        Training
                                    </th>
                                </tr>
                                <tr>
                                    <th width="30%">Type of Training</th>
                                    <th width="30%">Name of Institution</th>
                                    <th width="30%">Award</th>
                                </tr>
                                <t t-foreach="o.training_name_ids" t-as="education"
                                   t-if="line == education.training_name_inverse_id">
                                    <tr>
                                        <td width="30%">
                                            <t t-esc="education.type_of_training"/>
                                        </td>
                                        <td width="30%">
                                            <t t-esc="education.name_of_institution_id.name"/>
                                        </td>
                                        <td width="30%">
                                            <t t-esc="education.reward"/>
                                        </td>
                                    </tr>
                                </t>
                            </table>
                        </t>

                    </div>
                    <div class="row mt-3">
                        <table class="table styled-table" border="1">
                            <tr>
                                <th class="bg bg-danger" colspan="5">External Work Experience</th>
                            </tr>
                            <tr>
                                <th width="20">Job Title</th>
                                <th width="30%">Department</th>
                                <th width="10%">From</th>
                                <th width="10%">To</th>
                                <th width="40%">Organization</th>
                            </tr>
                            <t t-foreach="o.resume_line_ids.employee_id" t-as="line">
                                <t t-foreach="o.resume_line_ids" t-as="expérience"
                                   t-if="line == expérience.employee_id">
                                    <t t-if="expérience.name_of_org_id.name">
                                        <tr>
                                            <td width="20%">
                                                <t t-esc="expérience.job_title_ex"/>
                                            </td>
                                            <td width="30%">
                                                <t t-esc="expérience.department_ex.name"/>
                                            </td>
                                            <td width="10%">
                                                <t t-esc="expérience.date_start"/>
                                            </td>
                                            <td width="10%">
                                                <t t-esc="expérience.date_end"/>
                                            </td>
                                            <td width="40%">
                                                <t t-esc="expérience.name_of_org_id.name"/>
                                            </td>
                                        </tr>
                                    </t>
                                </t>
                            </t>
                        </table>
                    </div>

                    <div class="row mt-3">
                        <t t-foreach="o.employee_emergency_ids.em_full_name_id" t-as="line">
                            <table class="table styled-table" border="1">
                                <tr>
                                    <th class="bg bg-danger" colspan="6">Emergency Contact</th>
                                </tr>
                                <tr>
                                    <th width="20%">Full Name</th>
                                    <th width="15%">City</th>
                                    <th width="15%">sub city</th>
                                    <th width="10%">Woreda</th>
                                    <th width="15%">House No.</th>
                                    <th width="40">Mobile Phone No.</th>
                                </tr>
                                <t t-foreach="o.employee_emergency_ids" t-as="emergency"
                                   t-if="line == emergency.em_full_name_id">
                                    <tr>
                                        <td width="20%">
                                            <t t-esc="emergency.em_full_name_id_relation.name"/>
                                        </td>
                                        <td width="20%">
                                            <t t-esc="emergency.em_city.name"/>
                                        </td>
                                        <td width="15%">
                                            <t t-esc="emergency.em_sub_city.name"/>
                                        </td>
                                        <td width="5%">
                                            <t t-esc="emergency.em_woreda"/>
                                        </td>
                                        <td width="15%">
                                            <t t-esc="emergency.em_house"/>
                                        </td>
                                        <td width="40%">
                                            <t t-esc="emergency.em_phone"/>
                                        </td>
                                    </tr>
                                </t>
                            </table>
                        </t>
                    </div>
                </t>
            </t>
        </t>
    </template>
</odoo>
