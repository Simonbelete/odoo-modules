<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="mrp_production_form_view_inherited" model="ir.ui.view">
        <field name="name">mrp.production.form.inherited</field>
        <field name="model">mrp.production</field>
        <field name="inherit_id" ref="mrp.mrp_production_form_view"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='user_id']" style='' position="after">
                <field name="product_type"/>
                <field name="calculated_price" sum="Total Tip"/>
                <field name="emp_id"/>

            </xpath>
            <xpath expr="//field[@name='bom_id']" style='' position="before">
                <field name="price"/>
            </xpath>
        </field>
    </record>
</odoo>