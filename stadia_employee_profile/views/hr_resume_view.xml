<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="hr_employee_resume_inherited" model="ir.ui.view">
            <field name="name">employee_ms.resume_line.form.inherited</field>
            <field name="model">hr.resume.line</field>
            <field name="inherit_id" ref="hr_skills.resume_line_view_form"/>
            <field name="priority" eval="8"/>
            <field name="arch" type="xml">
                <xpath expr="//form[1]" position="replace">
                    <div>
                        <form>
                            <group string="External Work Experience">
                                <group>
                                    <field name="job_title"/>
                                    <field name="name_of_organization"/>
                                </group>
                                <group>
                                    <field name="date_start"/>
                                    <field name="date_end"/>
                                    <field name="salary"/>
                                </group>
                            </group>
                        </form>
                        <form>
                            <div class="oe_title">
                                <h1>
                                    <field name="name" placeholder="Description"/>
                                </h1>
                            </div>
                        </form>
                    </div>
                </xpath>
            </field>
        </record>
    </data>
</odoo>