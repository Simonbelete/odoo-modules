<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_employee_family_information" model="ir.ui.view">
        <field name="name">hr.employee.form.family.information</field>
        <field name="model">hr.employee</field>
        <field name="inherit_id" ref="hr.view_employee_form"/>
        <field name="arch" type="xml">
            <xpath expr="//page[@name='hr_settings']" style='' position="after">
                <page string="Family Information">
                    <field name="family_ids">
                        <tree editable="bottom">
                            <field name="relation_type"/>
                            <field name="name"/>
                            <field name="gender"/>
                            <field name="birth_date"/>
                            <field name="mobile_number"/>
                        </tree>
                    </field>
                </page>
            </xpath>
        </field>
    </record>
    <!--EDUCATIONAL INFORMATION-->
    <record id="view_employee_education_information" model="ir.ui.view">
        <field name="name">hr.employee.form.education.information</field>
        <field name="model">hr.employee</field>
        <field name="inherit_id" ref="hr.view_employee_form"/>
        <field name="arch" type="xml">
            <xpath expr="//page[@name='hr_settings']" style='' position="after">
                <page string="Educational Information">
                    <field name="education_ids">
                        <tree editable="bottom">
                            <field name="type"/>
                            <field name="school_name"/>
                            <field name="start_date"/>
                            <field name="end_date"/>
                            <field name="fields_of_study"
                                   attrs="{'invisible': [('type', 'in', ['primary', 'secondary'])]}"/>
                            <field name="grade" attrs="{'invisible': [('type', 'not in', ['primary', 'secondary'])]}"/>
                            <field name="certificate"/>
                        </tree>
                    </field>
                </page>
            </xpath>
        </field>
    </record>
    <!--CONTACT INFORMATION-->

    <record id="view_employee_contact_information" model="ir.ui.view">
        <field name="name">hr.employee.form.contact.information</field>
        <field name="model">hr.employee</field>
        <field name="inherit_id" ref="hr.view_employee_form"/>
        <field name="arch" type="xml">
            <xpath expr="//page[@name='personal_information']/group/group/field[@name='address_home_id']"
                   position="before">
                <field name="city"/>
                <field name="sub_city"/>
                <field name="woreda"/>
                <field name="house_number"/>
                <field name="mobile_number" invisible="1"/>
            </xpath>
        </field>
    </record>

    <!--    EMERGENCY CONTACT INFORMATION-->

    <record id="view_employee_emergency_contact_information" model="ir.ui.view">
        <field name="name">hr.employee.form.emergency.contact.information</field>
        <field name="model">hr.employee</field>
        <field name="inherit_id" ref="hr.view_employee_form"/>
        <field name="arch" type="xml">
            <xpath expr="//page[@name='personal_information']/group/group[5]" style='' position="replace">
                <group string="Emergency Contact">
                    <field name="emergency_ids"/>
                    <!--                    <tree editable="bottom">-->
                    <!--                        <field name="name"/>-->
                    <!--                        <field name="city"/>-->
                    <!--                        <field name="sub_city"/>-->
                    <!--                        <field name="woreda"/>-->
                    <!--                        <field name="mobile_number"/>-->
                    <!--                    </tree>-->
                </group>
            </xpath>
        </field>
    </record>


    <record id="view_employee_work_information_inherited" model="ir.ui.view">
        <field name="name">hr.employee.form.work.information</field>
        <field name="model">hr.employee</field>
        <field name="inherit_id" ref="hr.view_employee_form"/>
        <field name="arch" type="xml">
            <xpath expr="//page[@name='public']/div/div/group" position="inside">
                <field name="pension_id"/>
                <field name="tin_number"/>
                <field name="total_sum"/>
            </xpath>
        </field>
    </record>
    <record id="view_employee_leave_allocation" model="ir.ui.view">
        <field name="name">hr.employee.leave.allocation</field>
        <field name="model">hr.leave</field>
        <field name="inherit_id" ref="hr_holidays.hr_leave_view_form_manager"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='name']" position="after">
                <field name="number_of_days_display"/>
                <field name="link_leave_allocation"/>
                <field name="remaining_leave"/>
            </xpath>
        </field>
    </record>

    <record id="asset_leave_inherited" model="ir.ui.view">
        <field name="name">asset.leave.tree</field>
        <field name="model">hr.leave</field>
        <field name="inherit_id" ref="hr_holidays.hr_leave_view_tree"/>
        <field name="arch" type="xml">
            <tree>
                <field name="number_of_days" string="Taken Allocation"/>
                <field name="remaining_leave"/>
                <field name="number_of_days_display"/>
            </tree>
        </field>
    </record>
    <record id="asset_mrp_inherited" model="ir.ui.view">
        <field name="name">asset.leave.mrp</field>
        <field name="model">mrp.production</field>
        <field name="inherit_id" ref="mrp.mrp_production_form_view"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='product_id']" position="after">
                <field name="made_by"/>
            </xpath>
        </field>
    </record>
</odoo>