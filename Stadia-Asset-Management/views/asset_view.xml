<odoo>
    <data>
        <record model="ir.ui.view" id="odoo-asset-list-inherited">
            <field name="name">odoo-asset Responsible Person</field>
            <field name="model">account.asset.asset</field>
            <field name="inherit_id" ref="om_account_asset.view_account_asset_asset_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='category_id']" position="after">
                    <field name="tag_number"/>
                    <field name="responsible_id" required="True"/>
                </xpath>
            </field>
        </record>
    </data>
</odoo>