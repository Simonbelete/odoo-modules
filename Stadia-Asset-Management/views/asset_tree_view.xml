<odoo>
    <data>
        <record model="ir.ui.view" id="odoo-asset-tree_view-inherited">
            <field name="name">odoo-asset tree view</field>
            <field name="model">account.asset.asset</field>
            <field name="inherit_id" ref="om_account_asset.view_account_asset_asset_purchase_tree"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='date']" position="after">
                    <field name="tag_number"/>
                    <field name="responsible_id" required="True"/>
                </xpath>
            </field>
        </record>
    </data>
</odoo>