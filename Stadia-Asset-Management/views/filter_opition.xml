<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="view_asset_filter_inherited" model="ir.ui.view">
        <field name="name">asset.select.inherited</field>
        <field name="model">account.asset.asset</field>
        <field name="inherit_id" ref="om_account_asset.view_account_asset_search"/>
        <field name="arch" type="xml">
            <filter name="closed" position="after">
                <filter string="Not Assigned to Employee" name="responsible_id"
                        domain="[('responsible_id', '=', False)]"/>
            </filter>
        </field>
    </record>
</odoo>