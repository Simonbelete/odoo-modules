<?xml version="1.0"?>
<odoo>

    <record id="appraisal_configure_trait" model="ir.actions.act_window">
        <field name="name">Appraisal Survey Category</field>
        <field name="res_model">appraisal.trait</field>
        <field name="view_mode">tree,form</field>
    </record>

    <!-- Form -->
    <record id="appraisal_configure_trait_view_form" model="ir.ui.view">
        <field name="name">Appraisal Survey Questions</field>
        <field name="model">appraisal.trait</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="name" />
                        <field name="definition" />
                    </group>
                </sheet>
            </form>
        </field>
    </record>

</odoo>