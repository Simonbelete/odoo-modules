<?xml version="1.0"?>
<odoo>

    <record id="abc" model="ir.actions.act_window">
        <field name="name">Notification</field>
        <field name="res_model">hr.employee</field>
        <field name="view_mode">kanban</field>
        <field name="view_id" ref="appraisal.abc_kanaban"/>
    </record>

    <record id="abc_kanaban" model="ir.ui.view">
        <field name="name">appraisal.appraisal.emp</field>
        <field name="model">hr.employee</field>
        <field name="inherit_id" ref="hr.hr_kanban_view_employees"/>
        <field name="arch" type="xml">
           <xpath expr="//kanban" position="attributes">
                <attribute name="default_group_by">appraisal_status</attribute>
            </xpath>
        </field>
    </record>


    <record id="in_appraisal_employee_view" model="ir.ui.view">
        <field name="name">appraisal.appraisal.employee</field>
        <field name="model">hr.employee</field>
        <field name="inherit_id" ref="hr.view_employee_form"/>
        <field name="arch" type="xml">
            <!-- <xpath expr="//kanban" position="attributes">
                <attribute name="default_group_by">appraisal_status</attribute>
            </xpath> -->
            <xpath expr="//field[@name='work_email']" position="after">
                <field name="hired_date" string="Hired Date"/>
                <field name="appraisal_status" string="DEV"/>
            </xpath>
            <xpath expr="//page[@name='hr_settings']" position="after">
                <page string="Appraisals">
                    <field name="appraisal_ids"/>
                </page>
            </xpath>
        </field>
    </record>
</odoo>