<?xml version="1.0"?>
<odoo>

    <record id="appraisal_kanban_action" model="ir.actions.act_window">
        <field name="name">Appraisal</field>
        <field name="res_model">appraisal.appraisal</field>
        <field name="view_mode">kanban,form</field>
    </record>

    <!-- Kanban -->
    <record id="appraisal_kanban_view" model="ir.ui.view">
        <field name="name">appraisal.appraisal.kanban</field>
        <field name="model">appraisal.appraisal</field>
        <field name="arch" type="xml">
            <kanban>
                <templates>
                    <t t-name="kanban-box">
                        <div class="oe_kanban_global_click">
                            <field name="employee_id" />
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <!-- Form -->
    <record id="appraisal_view_form" model="ir.ui.view">
        <field name="name">Appraisal Form</field>
        <field name="model">appraisal.appraisal</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <button name="action_start_survery" type="object" string="Start Assement"/>
                    <field name="state" widget="statusbar" statusbar_visible="draft,confirmed,done" />
                </header>
                <sheet>
                    <group>
                        <field name="employee_id" />
                        <field name="survey_id" />
                    </group>
                </sheet>
            </form>
        </field>
    </record>


</odoo>