<?xml version="1.0"?>
<odoo>

    <record id="appraisal_kanban_action" model="ir.actions.act_window">
        <field name="name">Appraisal</field>
        <field name="res_model">appraisal.appraisal</field>
        <field name="view_mode">kanban,form</field>
    </record>

    <!-- Kanban -->
    <record id="appraisal_kanban_view" model="ir.ui.view">
        <field name="name">appraisal.appraisal.kanban</field>
        <field name="model">appraisal.appraisal</field>
        <field name="arch" type="xml">
            <kanban default_group_by="state">
                <templates>
                    <t t-name="kanban-box">
                        <div class="oe_kanban_global_click">
                            <div>
                                <p style="font-weight: bold; margin-bottom: 1px">
                                    <field name="employee_id" />
                                </p>
                                <p style="margin-bottom: 1px"><field name="survey_id" /></p>
                                <p style="font-size: 13px; margin-bottom: 1px"><span>Date:</span><field name="evaluation_date" /></p>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <!-- Form -->
    <record id="appraisal_view_form" model="ir.ui.view">
        <field name="name">Appraisal Form</field>
        <field name="model">appraisal.appraisal</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <button name="action_confirm" 
                            type="object"
                            string="Confirm"
                            style="background: #00a09d; color: white"
                            attrs="{'invisible': [('state', '!=', 'draft')] }"/>
                    <button name="action_start_survery" 
                            type="object" 
                            string="Start Assement"
                            attrs="{'invisible': [('state', '!=', 'confirmed')] }"/>
                    <button name="action_start_survery" 
                            type="object" 
                            string="Edit Assement"
                            attrs="{'invisible': [('state', '!=', 'started')] }"/>
                    <button name="send_report" 
                            type="object" 
                            string="Send Email"
                            attrs="{'invisible': [('state', '!=', 'started')] }"/>
                    <button name="action_approved" 
                            type="object" 
                            string="Approve"
                            attrs="{'invisible': [('state', '!=', 'reviewed')] }"/>
                    <button name="action_done" 
                            type="object" 
                            string="Done"
                            attrs="{'invisible': [('state', '!=', 'approved')] }"/>
                            
                    <!-- <button name="%(btn_action_print_appraisal)d" string="Print" type="action" /> -->
                    <!-- <button name="action_print_report" string="Print" type="object" /> -->
                    <field name="state" widget="statusbar" statusbar_visible="draft,confirmed,started,reviewed,approved,done" />
                </header>
                <sheet>
                    <group>
                        <group>
                            <field name="employee_id" />
                            <field name="survey_id" />
                        </group>
                        <group>
                            <field name="evaluation_date" />
                            <field name="last_evaluation" />
                            <field name="employee_reviewed_date" />
                        </group>
                    </group>
                    <group>
                        <field name="is_discussed" widget="checkbox" />
                        <hr />
                        <field name="strengths" />
                        <hr />
                        <field name="weaknesses" />
                        <hr />
                        <field name="recommendation" />
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Tree View -->
    <record id="appraisal_tree_view" model="ir.ui.view">
        <field name="name">appraisal.tree.view</field>
        <field name="model">appraisal.appraisal</field>
        <field name="arch" type="xml">
            <tree string="Tests">
                <field name="employee_id" />
                <field name="survey_id" />
                <field name="evaluation_date" />
                <field name="state" />
            </tree>
        </field>
    </record>

</odoo>