<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="field_add_example_payroll_contact_detail" model="ir.ui.view">
        <field name="model">hr.contract</field>
        <field name="inherit_id" ref="hr_contract.hr_contract_view_form"/>
        <field name="priority" eval="11"/>
        <field name="arch" type="xml">
            <xpath expr="//page[@name='other']/group[@name='notes_group']" position="replace">
                <sheet>
                    <group name="wage" string="Wage Per Month">
                        <field name="wage"/>
                        <!--                        <field name="contract_production_id" invisible="1"/>-->
                    </group>
                    <!--                    <group name="Manufactured product" string="Manufactured product">-->
                    <!--                        <field name="manufacture_id"/>-->
                    <!--                        <field name="tip_confirmation" string="Tip Confirmation"/>-->
                    <!--                    </group>-->
                    <group name='allowance' string="Allowance">
                        <field name="transport"/>
                        <field name="incentive"/>
                        <field name="house"/>
                        <field name="phone_payroll"/>
                        <field name="fuel"/>
                        <field name="total_allowance"/>
                        <!--                        <field name="date_diff" invisible="1"/>-->

                    </group>
                </sheet>
            </xpath>
        </field>
    </record>
    <!--        DEDUCTION -->
    <record id="field_add_example_deduction_contact_detail" model="ir.ui.view">
        <field name="model">hr.contract</field>
        <field name="inherit_id" ref="hr_contract.hr_contract_view_form"/>
        <field name="priority" eval="11"/>
        <field name="arch" type="xml">
            <xpath expr="//page[@name='other']" position="inside">
                <sheet>
                    <group string="Deduction">
                        <group>
                            <field name="tax"/>
                            <field name="medical_insurance"/>
                            <field name="loan"/>
                            <field name="pension_deduction"/>
                        </group>
                        <group>
                            <field name="cost_sharing_status" string="Cost Sharing Status(Pay||No)"/>
                            <field name="pay_amount"
                                   attrs="{'invisible': [('cost_sharing_status', 'not in', 'yes')]}"/>

                        </group>

                    </group>
                </sheet>
            </xpath>
        </field>
    </record>
    <!--   SALARY SCALE-->
    <record id="field_add_example_salary_scale" model="ir.ui.view">
        <field name="model">hr.contract</field>
        <field name="inherit_id" ref="hr_contract.hr_contract_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//page[@name='information']" position="inside">
                <group string="Scale">
                    <field name="salary_scale"/>
                </group>
            </xpath>
        </field>
    </record>
</odoo>