<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="hr_employee_inherited_form_view" model="ir.ui.view">
            <field name="name">employee_ms.resume_line.form</field>
            <field name="model">hr.resume.line</field>
            <field name="inherit_id" ref="hr_skills.resume_line_view_form"/>
            <field name="priority" eval="8"/>
            <field name="arch" type="xml">
                <xpath expr="//form[1]" position="replace">
                    <div>
                        <form>
                            <div class="oe_title">
                                <h1>
                                    <field name="name" placeholder="Description"/>
                                </h1>
                            </div>
                            <group string="Internal Work Experience">
                                <group>
                                    <field name="job_title_in"/>
                                    <field name="department_in"/>
                                </group>
                                <group>
                                    <field name="from_ex"/>
                                    <field name="to_ex"/>
                                </group>
                                <field name="document_internal_exp"/>
                            </group>
                        </form>
                        <form>
                            <group string="External Work Experience">
                                <group>
                                    <field name="job_title_ex"/>
                                    <field name="department_ex"/>
                                </group>
                                <group>
                                    <field name="date_start"/>
                                    <field name="date_end"/>
                                    <field name="name_of_org_id"/>
                                </group>
                                <field name="document_external_exp"/>
                            </group>
                        </form>
                        <!--                        <group>-->
                        <!--                            <field name="total_year_of_ex"/>-->
                        <!--                        </group>-->
                    </div>
                </xpath>
            </field>
        </record>
    </data>
</odoo>