        <!--Emergency Contact Information-->
        <record model="ir.ui.view" id="hr_employee_inherited_view_EmergencyContact_info_two">
            <field name="name">hr.employee.inherited.Emergency_info_Two</field>
            <field name="model">hr.employee</field>
            <field name="inherit_id" ref="hr.view_employee_form"/>
            <field name="priority" eval="10"/>
            <field name="arch" type="xml">
                <xpath expr="//page[@name='personal_information']"
                       position="inside">
                    <group string="Emergency Contact">
                        <field name="employee_emergency_ids">
                            <tree editable="bottom" class="custom_class">
                                <field name="em_full_name_id_relation"/>
                                <field name="em_city"/>
                                <field name="em_sub_city"/>
                                <field name="em_woreda"/>
                                <field name="em_house"/>
                                <field name="em_phone"/>
                            </tree>
                        </field>
                    </group>
                    <group string="Education Information">
                        <field name="employe_education_ids">
                            <tree editable="bottom" class="custom_class">
                                <field name="institute_id"/>
                                <field name="Employe_full_name" string="Field of Study"/>
                                <field name="start_Date"/>
                                <field name="end_date"/>
                                <field name="program" string="Program"/>
                                <field name="CGPA"/>
                                <field name="document_higher_education"/>
                            </tree>
                        </field>
                    </group>
                </xpath>
            </field>
        </record>
