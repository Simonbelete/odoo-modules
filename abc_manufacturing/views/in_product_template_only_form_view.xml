<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="in_product_template_only_form_view" model="ir.ui.view">
        <field name="name">product.template.inherit.product.view</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_only_form_view" />
        <field name="arch" type="xml">
            <!-- Add Product Type Field -->
            <xpath expr="//field[@name='categ_id']" position="after">
                <field name="product_type"/>
            </xpath>

            <!-- Add Mesurement field -->
            <xpath expr="//field[@name='product_type']" position="after">
                <field name="measurement_uom_id" string='Measurement'/>
            </xpath>

            <!-- Remove 'Internal Notes' and 'description' field "Remove child and parent" -->
            <xpath expr="//field[@name='description']/parent::*" position="replace" />

            <!-- Remove 'barcode field' -->
            <field name="barcode" position="attributes">
                <attribute name="invisible">True</attribute>
            </field>

            <!-- Rename field name 'Internal Reference' to 'Code' -->
            <field name="default_code" position="attributes">
                <attribute name="string">Code</attribute>
            </field>

            <!-- Remove 'Product Type' -->
            <field name="type" position="attributes">
                <attribute name="invisible">True</attribute>
            </field>

            <!-- Rename field name 'Product Category' to 'Category' -->
            <field name="categ_id" position="attributes">
                <attribute name="string">Category</attribute>
            </field>

            <!-- Remove 'Sales Price' and parent -->
            <!-- <xpath expr="//field[@name='list_price']" position="replace" />
            <field name="list_price" position="attributes">
                <attribute name="invisible">True</attribute>
            </field> -->
            
            <!-- Remove label 'list_price' label -->
            <!-- <xpath expr="//label[@for='list_price']" position="replace" /> -->

            <!-- Rename  -->
            <field name="standard_price" position="attributes">
                <attribute name="string">Price</attribute>
            </field>

            <!-- Hide Options 'can be sold...' -->
            <!-- <xpath expr="field[@name='sale_ok']" position="replace" /> -->
            <!-- <xpath expr="//label[@for='sale_ok']" position="replace" /> -->


        </field>
    </record>
</odoo>