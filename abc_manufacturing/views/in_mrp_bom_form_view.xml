<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="in_in_mrp_bom_form_view" model="ir.ui.view">
        <field name="name">mrp.bom.form.inherit.mrp_bottom_view</field>
        <field name="model">mrp.bom</field>
        <field name="inherit_id" ref="mrp.mrp_bom_form_view" />
        <field name="arch" type="xml">
            <xpath expr="//field[@name='operation_id']" position="after">
                <field name="cost" string="Cost"/>
            </xpath>
            <xpath expr="//field[@name='cost']" position="after">
                <field name="total_cost" string="Total Cost"/>
            </xpath>
        </field>
    </record>
</odoo>