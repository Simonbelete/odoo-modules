    <record id="in_mrp_production_form_view" model="ir.ui.view">
        <field name="name">production.form.inherit.production.form</field>
        <field name="model">mrp.production</field>
        <field name="inherit_id" ref="mrp.mrp_production_form_view" />
        <field name="arch" type="xml">
            <xpath expr="//div[@class='oe_button_box']" position="inside">
                <button name="%(btn_action_cost_analysis)d" class="oe_stat_button" string="Cost Analysis" type="action" icon="fa-money" />
            </xpath>

            <xpath expr="//button[@name='action_show_details']" position="before">
                <field name="cost_history" string="Cost"/>
             </xpath>
             <xpath expr="//button[@name='action_show_details']" position="before">
                <field name="total_cost" string="Total Cost"/>
             </xpath>
             <xpath expr="//field[@name='user_id']" position="before">
                <field name="cost_of_operation" string="Cost of Operation" />
             </xpath>
            <!-- <xpath expr="//field[@name='product_uom']" position="after">
