<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <data>
        <record id="field_add_example" model="ir.ui.view">
            <field name="model">hr.employee</field>
            <field name="inherit_id" ref="hr.view_employee_form"/>
            <field name="priority" eval="11"/>
            <field name="arch" type="xml">
                <xpath expr="//page[@name='public']/div/div/group[1]" position="before">
                    <sheet>
                        <group string="Employment Detail" class="my-5">
                            <hr/>
                            <field name="Entrance_Type" string="Employment Type"/>
                            <hr/>
                            <field name="Hiring_day" string="Hiring Day"/>
                            <hr/>
                            <field name="Hire_letter_number" string="Hire Letter Number"/>
                            <hr/>
                            <field name="education_level" string="Current Education Level"/>
                            <hr/>
                            <field name="field_of_study"/>
                            <hr/>
                            <field name="total_year_of_ex"/>
                            <hr/>
                        </group>
                    </sheet>
                </xpath>
            </field>
        </record>
        <!--        #EDUCATION UPDATE Information WHICH IS UPDATED THE EXISTING FIELDS.-->
        <record id="field_add_example_edite_emergency" model="ir.ui.view">
            <field name="model">hr.employee</field>
            <field name="inherit_id" ref="hr.view_employee_form"/>
            <field name="priority" eval="11"/>
            <field name="arch" type="xml">
                <xpath expr="//page[@name='personal_information']/group/group/field[@name='certificate']"
                       position="attributes">
                    <field name="document" position="attributes">
                        <attribute name="invisible">1</attribute>
                    </field>
                </xpath>
                <xpath expr="//page[@name='personal_information']/group/group/field[@name='study_field']"
                       position="attributes">
                    <field name="study_field" position="attributes">
                        <attribute name="invisible">1</attribute>
                    </field>
                </xpath>
                <xpath expr="//page[@name='personal_information']/group/group/field[@name='study_school']"
                       position="attributes">
                    <field name="study_school" position="attributes">
                        <attribute name="invisible">1</attribute>
                    </field>
                </xpath>
                <xpath expr="//page[@name='personal_information']/group/group[7]"
                       position="attributes">
                    <group name="education_edite" position="attributes">
                        <attribute name="invisible">1</attribute>
                    </group>
                </xpath>
                <xpath expr="//page[@name='personal_information']/group/group[5]"
                       position="attributes">
                    <group name="emergency_edite" position="attributes">
                        <attribute name="invisible">1</attribute>
                    </group>
                </xpath>
            </field>
        </record>
<!--        #EMERGENCY CONTACT DETAIL WHICH IS UPDATED-->
        <record id="field_add_example_edite_emergency_updated" model="ir.ui.view">
            <field name="model">hr.employee</field>
            <field name="inherit_id" ref="hr.view_employee_form"/>
            <field name="priority" eval="11"/>
            <field name="arch" type="xml">
                <xpath expr="//page[@name='personal_information']/group/group/field[@name='emergency_phone']"
                       position="attributes">
                    <field name="emergency_phone" position="attributes">
                        <attribute name="invisible">1</attribute>
                    </field>
                </xpath>
                <xpath expr="//page[@name='personal_information']/group/group/field[@name='emergency_contact']"
                       position="attributes">
                    <field name="emergency_contact" position="attributes">
                        <attribute name="invisible">1</attribute>
                    </field>
                </xpath>

                <xpath expr="//page[@name='personal_information']/group/group[1]/field[@name='address_home_id']"
                       position="attributes">
                    <field name="address_home_id" position="attributes">
                        <attribute name="invisible">1</attribute>
                    </field>
                </xpath>
            </field>
        </record>
    </data>
</odoo>