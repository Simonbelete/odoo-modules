<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="hr_employee_view_search_inherit" model="ir.ui.view">
        <field name="name">hr.employee.view.search.inherit</field>
        <field name="model">hr.employee</field>
        <field name="inherit_id" ref="hr.view_employee_filter"/>
        <field name="arch" type="xml">
            <data>
                <xpath expr="//filter[@name='message_needaction']" position="after">
                    <separator/>
                    <filter string="Male Employee" name="male_employee" domain="[('gender', '=', 'male')]"/>

                    <separator/>
                    <filter string="Female Employee" name="female_employee" domain="[('gender', '=', 'female')]"/>

                    <separator/>
                    <filter string="Married Employee" name="married_employee" domain="[('marital', '=', 'married')]"/>
                    <separator/>
                    <filter string="Single Employee" name="married_employee" domain="[('marital', '=', 'single')]"/>
                </xpath>

                <searchpanel>
                    <field name="coach_id" enable_counters="1"/>
                </searchpanel>
                <searchpanel>
                    <field name="job_id" enable_counters="1"/>
                </searchpanel>
                <searchpanel>
                    <field name="sub_city_id" enable_counters="1"/>
                </searchpanel>
                <search>
                    <field name="work_phone" string="phone"/>
                </search>
            </data>
        </field>
    </record>
</odoo>