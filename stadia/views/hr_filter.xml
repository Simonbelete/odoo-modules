<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="hr_employee_view_search_male_employee" model="ir.ui.view">
        <field name="name">hr.employee.view.search.male.employee</field>
        <field name="model">hr.employee</field>
        <field name="inherit_id" ref="hr.view_employee_filter"/>
        <field name="arch" type="xml">
            <data>
                <xpath expr="//filter[@name='message_needaction']" position="after">
                    <separator/>
                    <filter string="Male Employee" name="male_employee"
                            domain="[('gender', '=', 'male')]"/>
                </xpath>
            </data>
        </field>
    </record>

    <record id="hr_employee_view_search_female_employee" model="ir.ui.view">
        <field name="name">hr.employee.view.search.female.employee</field>
        <field name="model">hr.employee</field>
        <field name="inherit_id" ref="hr.view_employee_filter"/>
        <field name="arch" type="xml">
            <data>
                <xpath expr="//filter[@name='message_needaction']" position="after">
                    <separator/>
                    <filter string="Female Employee" name="female_employee"
                            domain="[('gender', '=', 'female')]"/>
                </xpath>
            </data>
        </field>
    </record>

