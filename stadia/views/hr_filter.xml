    <record id="hr_employee_view_search_employee_by_phone" model="ir.ui.view">
        <field name="name">hr.employee.view.search.employee.phone</field>
        <field name="model">hr.employee</field>
        <field name="inherit_id" ref="hr.view_employee_filter"/>
        <field name="arch" type="xml">
            <search>
                <field name="name" string="Work Phone"
                       filter_domain="['|',('name','ilike', self),('mobile_phone','ilike', self)]"/>
            </search>
            <searchpanel>
                <field name="job_id" enable_counters="1"/>
            </searchpanel>
            <searchpanel>
                <field name="coach_id" enable_counters="1"/>
            </searchpanel>

        </field>
    </record>
