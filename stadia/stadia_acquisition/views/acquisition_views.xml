<?xml version="1.0"?>
<odoo>

    <record id="acquisition_action" model="ir.actions.act_window">
        <field name="name">Acquisition</field>
        <field name="res_model">stadia.acquisition.acquisition</field>
        <field name="view_mode">tree,form</field>
        <field name="context">{'search_default_state': 1}</field>
    </record>

    <!-- Search -->
    <record id="acquisition_search" model="ir.ui.view">
        <field name="name">stadia.acquisition.acquisition</field>
        <field name="model">stadia.acquisition.acquisition</field>
        <field name="arch" type="xml">
            <search>
                <group expand="0">
                    <filter name="state" domain="[('state', '=', 'draft')]" />
                </group>
            </search>
        </field>
    </record>

    <!-- Tree View -->
    <record id="acquisition_tree" model="ir.ui.view">
        <field name="name">Acquisition</field>
        <field name="model">stadia.acquisition.acquisition</field>
        <field name="arch" type="xml"> 
            <tree>
                <field name="job_id" string="Job Position"/>
                <field name="requested_by" string="Requested By" />
                <field name="no_of_recruitment" string="No of recruitment" />
            </tree>
        </field>
    </record>

    <!-- Form -->
    <record id="acquisition_form" model="ir.ui.view">
        <field name="name">Acquisition</field>
        <field name="model">stadia.acquisition.acquisition</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <button name="action_approve" string="Approve" type="object" class="oe_highlight" />
                    <button name="action_decline" string="Decline" type="object" />
                    <field name="state" widget="statusbar" statusbar_visible="draft,approved,declined,done"/>
                </header>
                <sheet>
                    <group>
                        <group>
                            <field name="requested_by" string="Requested By" />
                            <field name="job_id" string="Job Position" />
                            <field name="no_of_recruitment" string="Expected Employees" />	
                        </group>
                        <group>
                            <field name="salary" string="Salary"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Recommendations">
                            <field name="recommendation_ids" />
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

</odoo>