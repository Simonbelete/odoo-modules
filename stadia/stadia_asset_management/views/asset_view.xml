<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="asset_creation_form" model="ir.ui.view">
        <field name="name">asset.creation.form</field>
        <field name="model">stadia.asset</field>
        <field name="arch" type="xml">
            <form string="Create Asset">
<!--                <header>-->
<!--                    <button name="action_name" string="Test" type="button_type" class="oe_highlight"/>-->
<!--                </header>-->
                <sheet>
                    <group>
                        <group>
                            <field name="name"/>
                            <field name="tag_number"/>
                            <field name="responsible_person"/>
                            <field name="asset_category"/>
                            <field name="asset_reference"/>
                            <field name="created_date"/>
                            <field name="warehouse_location"/>
                        </group>
                        <group>
                            <field name="gross_value"/>
                            <field name="salvage_value"/>
                            <field name="residual_value"/>
                            <field name="vendor"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Asset Description">
                            <field name="description" style=' max-width: 1150px;  width: 500px'/>
                        </page>
                        <page string="Depreciation List">
                        </page>
                        <page string="Depreciation Information">
                            <group>
                                <group string=" Depreciation Method:">
                                    <field name="Depreciation_method"/>
                                </group>
                                <group string=" Degressive Factor:">
                                    <field name="Degressive_Factor"/>
                                </group>
                                <group string="Periodicity">
                                    <field name="depreciation_number"/>
                                    <field name="month_number"/>
                                </group>
                            </group>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>
    <!--ASSET TREE VIEW-->
    <record id="asset_tree_view" model="ir.ui.view">
        <field name="name">stadia.asset.tree</field>
        <field name="model">stadia.asset</field>
        <field name="arch" type="xml">
            <tree string="Stadia Asset List">
                <field name="name"/>
                <field name="tag_number"/>
                <field name="responsible_person"/>
                <field name="asset_category"/>
                <field name="asset_reference"/>
                <field name="created_date"/>
                <field name="warehouse_location"/>
                <field name="gross_value"/>
                <field name="salvage_value"/>
                <field name="residual_value"/>
                <field name="vendor"/>
                <field name="Depreciation_method"/>
                <field name="Degressive_Factor"/>
            </tree>
        </field>
    </record>

    <!--    ASSET KANBAN VIEW-->

    <record id="stadia_asset_kanban" model="ir.ui.view">
        <field name="name">stadia.asset.kanban</field>
        <field name="model">stadia.asset</field>
        <field name="arch" type="xml">
            <kanban>
                <field name="name"/>
                <field name="tag_number"/>
                <field name="asset_category"/>
                <field name="asset_reference"/>
                <field name="created_date"/>
                <field name="warehouse_location"/>
                <field name="gross_value"/>
                <field name="salvage_value"/>
                <field name="residual_value"/>
                <templates>
                    <t t-name="kanban-box">
                        <div t-attf-class="oe_kanban_card oe_kanban_global_click">
                            <ul>
                                <li>Asset Name:
                                    <t t-esc="record.name.value"/>
                                </li>
                                <li>Asset Tag Number:
                                    <t t-esc="record.tag_number.value"/>
                                </li>
                                <li>Asset Category Name:
                                    <t t-esc="record.asset_category.value"/>
                                </li>
                                <li>Asset Reference
                                    <t t-esc="record.asset_reference.value"/>
                                </li>
                                <li>Asset Created Date
                                    <t t-esc="record.created_date.value"/>
                                </li>
                                <li>Asset Created Date
                                    <t t-esc="record.warehouse_location.value"/>
                                </li>
                                <li>Asset Gross Value
                                    <t t-esc="record.gross_value.value"/>
                                </li>
                                <li>Asset Salvage Value
                                    <t t-esc="record.salvage_value.value"/>
                                </li>
                                <li>Asset Residual Value
                                    <t t-esc="record.residual_value.value"/>
                                </li>
                            </ul>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>


    <record id="action_asset_creation" model="ir.actions.act_window">
        <field name="name">Create Asset</field>
        <field name="res_model">stadia.asset</field>
        <field name="type">ir.actions.act_window</field>
        <field name="view_mode">tree,kanban,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create New Asset
            </p>
        </field>
    </record>

    <menuitem
            id="action_menu_asset_create"
            name="Asset"
            sequence="3"
            parent="action_menu_asset_type"
            action="action_asset_creation"/>
</odoo>