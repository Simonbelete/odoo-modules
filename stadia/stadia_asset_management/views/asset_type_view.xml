<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="asset_category_form" model="ir.ui.view">
        <field name="name">asset.category.form</field>
        <field name="model">asset.type</field>
        <field name="arch" type="xml">
            <form string="Asset category">
                <sheet>
                    <group>
                        <group string="Asset Type">
                            <field name="category_name"/>
                        </group>
                        <group string="Depreciation Method">
                            <field name="Depreciation_method"/>
                            <field name="Degressive_Factor"
                                   attrs="{'invisible': [('Depreciation_method',  '=', 'linear')]}"/>
                        </group>
                    </group>
                    <group string="Numbers of Entries">
                        <field name="depreciation_number"/>
                        <field name="month_number"/>
                    </group>
                    <notebook>
                        <page string="Page1">

                        </page>
                        <page string="Page2">

                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>
    <!--    ASSET CATEGORY TREE VIEW-->
    <record id="asset_category_tree" model="ir.ui.view">
        <field name="name">asset.category.tree</field>
        <field name="model">asset.type</field>
        <field name="arch" type="xml">
            <tree string="Asset Category">
                <field name="category_name"/>
                <field name="Depreciation_method"/>
                <field name="Degressive_Factor"/>
            </tree>
        </field>
    </record>
    <!--ASSET CATEGORY KANBAN VIEW-->
    <record id="asset_category_kanban" model="ir.ui.view">
        <field name="name">asset.category.kanban</field>
        <field name="model">asset.type</field>
        <field name="arch" type="xml">
            <kanban>
                <field name="category_name"/>
                <field name="Depreciation_method"/>
                <field name="Degressive_Factor"/>
                <templates>
                    <t t-name="kanban-box">
                        <div t-attf-class="oe_kanban_card oe_kanban_global_click">
                            <ul>
                                <li>Asset Category Name:
                                    <t t-esc="record.category_name.value"/>
                                </li>
                                <li>Depreciation Method:
                                    <t t-esc="record.Depreciation_method.value"/>
                                </li>
                                <li>Depreciation Factor:
                                    <t t-esc="record.Degressive_Factor.value"/>
                                </li>
                            </ul>
                        </div>
                    </t>
                </templates>

            </kanban>
        </field>
    </record>
    <!--    ASSET CATEGORY SEARCH BAR-->

    <record id="asset_category_search" model="ir.ui.view">
        <field name="name">asset.category.search</field>
        <field name="model">asset.type</field>
        <field name="arch" type="xml">
            <search string="Search">
                <field name="category_name"
                       filter_domain="[('category_name','ilike', self)]"/>
            </search>
        </field>
    </record>
    <record id="action_asset_category" model="ir.actions.act_window">
        <field name="name">Create Asset Category</field>
        <field name="res_model">asset.type</field>
        <field name="type">ir.actions.act_window</field>
        <field name="view_mode">tree,kanban,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create New Asset Category
            </p>
        </field>
    </record>
</odoo>