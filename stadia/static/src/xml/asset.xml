<?xml version="1.0" encoding="UTF-8" ?>
<templates>
    <t t-name="asset_print_report_button">
        <div>
            <button type="button" name="action_print_xls_report" class="btn btn-primary s_asset_report_print">Print</button>
        </div>
    </t>

    <form class="form-inline" t-name="asset_search_report">
        <div class="form-group col-lg-4">
            <label>Year:</label>
            <div class="row">
                <div class="col-lg-6">
                    <input type="date" class="s_asset_report_date"/>
                </div>
            </div>
        </div>
        <div class="form-group col-lg-8">
            <label>Category</label>
            <select class="s_asset_report_category">
                <option>1</option>
                <option>2</option>
            </select>
        </div>
    </form>
</templates>