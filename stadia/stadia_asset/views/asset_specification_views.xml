<?xml version="1.0"?>
<odoo>
    <!-- Tree -->
    <record id="asset_specification_tree" model="ir.ui.view">
        <field name="name">Asset Specification</field>
        <field name="model">asset.specification</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name_id" string="Name" />
                <field name="value_id" string="Value" />
            </tree>
        </field>
    </record>

    <record id="asset_specification_form" model="ir.ui.view">
        <field name="name">Asset Specification</field>
        <field name="model">asset.specification</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="name_id" string="Name" />
                        <field name="value_id" string="Value" />
                    </group>
                </sheet>
            </form>
        </field>
    </record>
</odoo>